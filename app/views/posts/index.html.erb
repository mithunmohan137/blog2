<div class="container">
<h3><strong>Posts</strong></h3>

<table style="width:50%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td style="width:7%"><%= link_to 'Show', post %></td>
        <td style="width:5%" ><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<strong>
<%= link_to 'New Post', new_post_path %>
</strong>
